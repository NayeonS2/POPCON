<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.POPCON" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/popcon_orange</item>
        <item name="colorPrimaryVariant">@color/popcon_orange</item>
        <item name="colorOnPrimary">@color/popcon_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/popcon_yellow</item>
        <item name="colorSecondaryVariant">@color/popcon_light_yellow</item>
        <item name="colorOnSecondary">@color/popcon_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Customize your theme here. -->
    </style>
</resources>