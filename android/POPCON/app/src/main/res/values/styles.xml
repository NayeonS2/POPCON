<resources>
    <!--  Image Style  -->
    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedBig">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RoundedMedium">
        <item name="cornerSize">8dp</item>
    </style>

    <!--  Text Style  -->

    <style name="Regular">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/popcon_black_01</item>
        <item name="fontFamily">@font/noto_sans_regular</item>
    </style>

    <style name="Medium">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/popcon_black_01</item>
        <item name="fontFamily">@font/noto_sans_medium</item>
    </style>

    <style name="Bold">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/popcon_black_01</item>
        <item name="fontFamily">@font/noto_sans_bold</item>
    </style>
    <style name="Light">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/popcon_black_01</item>
        <item name="fontFamily">@font/noto_sans_light</item>
    </style>
    <style name="Bold.Brown">
        <item name="android:textColor">@color/popcon_brown</item>
    </style>
    <style name="Bold.Grey">
        <item name="android:textColor">"#5A5A5A"</item>
    </style>
    <style name="Bold.White">
        <item name="android:textColor">@color/popcon_white</item>
    </style>
    <style name="Medium.Grey">
        <item name="android:textColor">"#5A5A5A"</item>
    </style>
    <style name="Regular.White">
        <item name="android:textColor">@color/popcon_white</item>
    </style>
    <style name="Regular.Grey">
        <item name="android:textColor">#969696</item>
    </style>

    <!--  Switch  -->
    <style name="switch_Orange">
        <item name="colorControlActivated">@color/popcon_orange</item>
    </style>

    <!--  Dialog Size  -->
    <style name="WrapContentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <!--  Transparent Dialog  -->
    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--  EditText  -->
    <style name="AddEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="boxStrokeColor">@color/popcon_orange</item>
        <item name="boxBackgroundColor">@color/popcon_white</item>
    </style>

</resources>
